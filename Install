###########################################
##OpenXLIFF

sudo apt install openjdk-11-jdk git ant npm
sudo mkdir -p /opt/Maxprograms/
sudo chmod 777 /opt/Maxprograms

cd /opt/Maxprograms/
git clone https://github.com/rmraya/OpenXLIFF.git
cd /opt/Maxprograms/OpenXLIFF
ant
